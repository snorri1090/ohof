.locations.delete
  %h2 Delete Location

  = form_for(:location, url: {action: 'destroy', id: @location.id}) do |f|
    %p Are you sure you want to permanently delete this location?
    %p.reference.name= @location.name

    %br
    .form.buttons
      = submit_tag("Delete Location")
