%table{:summary => "Section form fields"}
  %tr
    %th= f.label(:page_id, "Page ID")
    %td= f.select(:page_id, @pages.collect {|p| [p.name, p.id]})
  %tr
    %th= f.label(:name, "Name")
    %td= f.text_field(:name)
  %tr
    %th= f.label(:position, "Position")
    %td= f.select(:position, 1..@section_count)
  %tr
    %th= f.label(:visible, "Visible")
    %td= f.check_box(:visible)
  %tr
    %th= f.label(:content_type, "Content Type")
    %td
      = f.radio_button(:content_type, 'text')
      Text
      = f.radio_button(:content_type, 'HTML')
      HTML
  %tr
    %th= f.label(:content, "Content")
    %td= f.text_area(:content, size: '40x10')
