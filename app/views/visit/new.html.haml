= form_for(:visit, url: {action: 'create'}) do |f|
  %h1 Add a New OHOF Visit

  %h2 Location
  %ul
    %li Select a Location
    %li= f.collection_select(:location_id, Location.all, :id, :name)

  %ul
    %li New location not on the list?
    %li= link_to("Add a New Location", location_new_path, class: 'back link')

  %h2 Visit Details
  %ul
    %li
      date
      %br
      = f.date_field(:date, id: 'date')

    %li
      community
      %br
      %td= f.text_area(:community)
    %li
      work
      %br
      %td= f.text_area(:work)
    %li
      Comments
      %br
      %td= f.text_area(:comments)


    %br
    .form.buttons
      = submit_tag("New Visit")
