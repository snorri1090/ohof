.locations.edit
  %h2 Update Location

  = form_for(:location, url: {action: 'update', id: @location.id}) do |f|

    %table{summary: "Location form fields"}
      %tr
        %th Name
        %td= f.text_field(:name)
      %tr
        %th Specific location
        %td= f.text_field(:sub_location)
      %tr
        %th Location Category
        %td= f.text_field(:category)
      %tr
        %th WiFi or Internet?
        %td= f.check_box(:wifi)
      %tr
        %th WiFi Password
        %td= f.text_field(:wifi_password)
      %tr
        %th Power Supply?
        %td= f.check_box(:power)
      %tr
        %th Coffee?
        %td= f.check_box(:coffee)
      %tr
        %th Food?
        %td= f.check_box(:food)
      %tr
        %th Food &amp; Coffee Comments
        %td= f.check_box(:food_detail)
      %tr
        %th Additional Location Comments
        %td= f.text_area(:comments)

    %hr
    %h3 Additional Items. Move to Visits table when complete
    %table{summary: "Additional Visit Information"}
      %tr
        %th Any Conversations?
        %td= f.text_area(:work_done)
      %tr
        %th Did I get any work done?
        %td= f.text_area(:conversation)

    .form.buttons
      = submit_tag("Update Location")
