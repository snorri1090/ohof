- @page_title = "Pages"
.pages.index
  %h2 Pages
  = link_to("Add New Page", {:action => 'new'}, :class => 'action new')
  %table.listing{:summary => "Page list"}
    %tr.header
      %th Â 
      %th Subject
      %th Page
      %th Permalink
      %th Visible
      %th Sections
      %th Actions
    - @pages.each do |page|
      %tr
        %td= page.position
        %td= page.subject.name if page.subject
        %td= page.name
        %td= page.permalink
        %td.center= status_tag(page.visible)
        %td.center= page.sections.size
        %td.actions
          = link_to("Show", {:action => 'show', :id => page.id}, :class => 'action show')
          = link_to("Edit", {:action => 'edit', :id => page.id}, :class => 'action edit')
          = link_to("Delete", {:action => 'delete', :id => page.id}, :class => 'action delete')
